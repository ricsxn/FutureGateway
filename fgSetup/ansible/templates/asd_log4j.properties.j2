# Redirect log messages to a log file, support file rolling.
log4j.appender.file={{ asd_file_appender }}
log4j.appender.file.File={{ asd_file_file }}
log4j.appender.file.MaxFileSize={{ asd_file_maxfilesize }}
log4j.appender.file.MaxBackupIndex={{ asd_file_maxbackupindex }}
log4j.appender.file.layout={{ asd_file_layout }}
log4j.appender.file.layout.ConversionPattern={{ file_layout_conversionpattern }}
